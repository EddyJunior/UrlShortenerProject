@{
    string url = @ViewData["url"] == null ? "Error" : @ViewData["url"].ToString();

}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

<h3>URL shortining with sucess!</h3>

<div class="input-group mb-3" style="width:60%">
    <input type="text" class="form-control textarea" value="@url"
           aria-label="Recipient's username" aria-describedby="button-addon2">
    <div class="input-group-append">
        <button class="btn btn-primary copiar" type="button" id="button-addon2"
                data-toggle="popover" title="Copied with success!"
                data-content="Use ctr+v for paste your url.">
            Copy URL
        </button>
    </div>
</div>


<script>

    $(document).ready(function () {
        $('[data-toggle="popover"]').popover();
    });

    var copyTextareaBtn = document.querySelector('.copiar');

    copyTextareaBtn.addEventListener('click', function (event) {
        var copyTextarea = document.querySelector('.textarea');
        copyTextarea.select();
        try {
            var successful = document.execCommand('copy');
        } catch (err) {
            alert('Opa, Não conseguimos copiar o texto, é possivel que o seu navegador não tenha suporte, tente usar Crtl+C.');
        }
    });
</script>